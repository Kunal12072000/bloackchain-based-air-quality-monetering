<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    tools:context="com.pollution.pollutionApp.OTPActivity">


    <LinearLayout
        android:id="@+id/linear_verify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/eight_dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10dp"
            android:fontFamily="@font/montserrat"
            android:gravity="start"
            android:paddingStart="@dimen/four_dp"
            android:text="@string/verify_code"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/black_0a" />


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginStart="@dimen/margin_10dp"
            android:layout_marginTop="@dimen/margin_30dp"
            android:layout_marginEnd="@dimen/margin_10dp">

            <EditText
                android:id="@+id/numberAuthEdt1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="@dimen/margin_10dp"
                android:background="@drawable/test_background"
                android:gravity="center"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:padding="@dimen/padding_10"
                android:textSize="@dimen/size_21"
                android:theme="@style/EditTextTheme" />

            <EditText
                android:id="@+id/numberAuthEdt2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="@dimen/margin_10dp"
                android:background="@drawable/test_background"
                android:gravity="center"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:padding="@dimen/padding_10"
                android:textSize="@dimen/size_21"
                android:theme="@style/EditTextTheme" />

            <EditText
                android:id="@+id/numberAuthEdt3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="@dimen/margin_10dp"
                android:background="@drawable/test_background"
                android:gravity="center"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:padding="@dimen/padding_10"
                android:textSize="@dimen/size_21"
                android:theme="@style/EditTextTheme" />

            <EditText
                android:id="@+id/numberAuthEdt4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="@dimen/margin_10dp"
                android:background="@drawable/test_background"
                android:gravity="center"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:padding="@dimen/padding_10"
                android:textSize="@dimen/size_21"
                android:theme="@style/EditTextTheme" />


        </TableRow>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/margin_30dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_resend"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:text="Re-send"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_marginEnd="@dimen/activity_vertical_margin"
                android:textColor="@color/red_shade_4d"
                android:textStyle="bold"
                app:cornerRadius="@dimen/corner_background"
                app:elevation="5dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_verify"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/frame_back_requested_rounds"
                android:text="ok"
                android:layout_marginStart="@dimen/eight_dp"
                android:textColor="@color/whitie"
                android:textStyle="bold"
                app:cornerRadius="@dimen/corner_background"
                app:elevation="5dp" />
        </LinearLayout>
        <!--
                <TextView
                    android:id="@+id/verify_timer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_21"
                    android:textStyle="bold"
                    android:textColor="@color/blue"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_10dp"
                    />-->

    </LinearLayout>


</RelativeLayout>