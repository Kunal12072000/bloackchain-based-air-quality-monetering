<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fl_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_red_shade"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/ll_login_ui"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical"
        android:paddingStart="@dimen/twentyfour"
        android:paddingEnd="@dimen/twentyfour">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:visibility="visible"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:src="@drawable/ic_industry" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/twentyfour"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:padding="@dimen/four_dp"
            android:text="@string/login_register"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/splash"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/eight_dp"
            android:padding="@dimen/four_dp"
            android:textColorHint="@color/whitie"
            app:hintTextAppearance="@style/TextAppearance.AppCompat.Medium">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_cont_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:hint="Contact number"

                android:padding="@dimen/eight_dp"
                android:textColor="@color/whitie"
                android:textColorHint="@color/splash" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/eight_dp"
            android:padding="@dimen/four_dp"
            android:textColorHint="@color/whitie"
            app:hintTextAppearance="@style/TextAppearance.AppCompat.Medium">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_pass_log"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"

                android:padding="@dimen/eight_dp"
                android:hint="password"
                android:textColor="@color/whitie"
                android:textColorHint="@color/splash" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/eight_dp"
            android:layout_marginBottom="@dimen/eight_dp"
            android:fontFamily="@font/montserrat"
            android:padding="@dimen/four_dp"
            android:text="login"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:fontFamily="@font/montserrat"
            android:gravity="end"
            android:padding="@dimen/four_dp"
            android:text="New User? Register"
            android:onClick="onRegClicked"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/splash"
            android:textStyle="bold" />


    </LinearLayout>
</FrameLayout>